<% @questions.each do |question| %>
  <div class="mt-sm container">
    <div class="mb-sm pre-line">
      <%= render_with_hashtags(question.body) %>
    </div>

    <% if question.answer.present? %>
      <div class="mb-sm text-dark-red">
        <%= render_with_hashtags(question.answer) %>
      </div>
    <% end %>

    <p class="mb-sm text-sm text-grey">
      <% if question.author.nil?  %>
        <%= "created by Anonymous" %>
      <% else %>
      <%= "created by: " %>
        <%= link_to "##{question.author.nickname}", user_path(question.author.nickname) %>
      <% end %>
    </p>

    <div class="text-sm question-footer">
      <div class="text-grey">
        <%= l(question.created_at, format: :short) %>
      </div>
    </div>
  </div>
<% end %>
