<div class="container">
  <h2 class="title-lg mb">
    Recently added users
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: "users/user_avatar", locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mt-sm">
  <h2 class="title-lg mb">
    <%= inclination(@questions.count, "Last", "The last") %>
    <%= @questions.count %>
    <%= inclination(@questions.count, "question", "questions") %>
  </h2>
</div>

<% @questions.each do |question| %>

<div class="mt-sm container">

  <%= render question %>
</div>
<% end %>
