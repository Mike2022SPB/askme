<div class="container">
  <h2 class="title">Editing the user</h2>

  <%if @user.errors.any? %>
    <div class="mt">
      <% @user.errors.full_messages.each do |message| %>
        <p class="mb-sm text-red"><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="mt">
    <%= form_with model: @user, data: {turbo: false} do |form| %>
    <p><%= form.label :name, "Input your name" %></p>
    <p><%= form.text_field :name, class: "form-text-field" %></p>

    <p class="mt"><%= form.label :nickname, "Input your nickname" %></p>
    <p><%= form.text_field :nickname, class: "form-text-field" %></p>

    <p class="mt-lg text-sm">To avoid changing the password, leave this field empty.</p>

    <p class="mt"><%= form.label :password, "Password" %> </p>
    <p><%= form.password_field :password, class: "form-text-field" %> </p>

    <p class="mt"><%= form.label :password_confirmation, "Password confirmation" %> </p>
    <p><%= form.password_field :password_confirmation, class: "form-text-field" %> </p>

    <p class="mt-lg">
      <%= form.submit "Save", class: "button button-main"%>
      <span class="text-sm"> OR <%= link_to "Come back", :back %></span>
    </p>
  <% end %>
  </div>

  <div class="mt-lg">
    <%= button_to "Delete profile", user_path(@user),
      method: :delete,
      form: {data: {turbo_confirm: "Are you shure?"}},
      class: "text-red text-sm" %>
  </div>

</div>